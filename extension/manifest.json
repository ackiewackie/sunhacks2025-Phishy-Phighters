{
  "manifest_version": 3,
  "name": "Phishy Waters",
  "version": "1.0",
  "description": "Let Phishy guide you online! He can scan links and fact-check misinformation in real time.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popups/popup.html",
    "default_icon": {
      "16": "images/phish.png",
      "48": "images/phish.png",
      "128": "images/phish.png"
    }
  },
  "icons": {
      "16": "images/phish.png",
      "48": "images/phish.png",
      "128": "images/phish.png"
  },
  "content_scripts": [ 
	{
		"js": ["content.js"],
		"matches": ["<all_urls>"],
    "css": ["content.css"]
	}
  ],
    "host_permissions": [
        "https://safebrowsing.googleapis.com/*"    
    ]
}